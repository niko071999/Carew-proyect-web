
@{
    ViewBag.Title = "FirstOpenSystem";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - Carew</title>
    @Styles.Render("~/Content/css-app-sesion")
    @Scripts.Render("~/bundles/js-head-sesion")
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
</head>
<body class="bg-gradient-success">
    <div class="preloader-wrapper">
        <div class="spinner-border text-light" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <h4 class="text-light ms-4"><span class="align-middle">Cargando el sistema CAREW</span></h4>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
        </symbol>
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </symbol>
    </svg>

    <div id="session" class="container">
        <!-- Outer Row -->
        <div class="row mw-100">
            <div class="col-xl-12 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-5 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-7">
                                <div class="p-3">
                                    <h5 class="card-title fw-bold text-center">Bienvenido a CAREW</h5>
                                    <h6 class="card-subtitle mb-4 text-center">Empiece por crear al usuario admininstrador</h6>
                                    <form class="user" action="@Url.Action("AgregarUsuarioAdmin","Sesion")" method="post">
                                        @if (ViewBag.Error != null)
                                        {
                                            <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert">
                                                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                                                <div>
                                                    @ViewBag.Error
                                                </div>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        }
                                        <div class="row">
                                            <div class="col col-6 mb-4">
                                                <label class="form-label">Nombre</label>
                                                <input type="text" class="form-control" id="inputname" name="firstname"
                                                       placeholder="Ingrese su nombre" required>
                                            </div>
                                            <div class="col col-6 mb-4">
                                                <label class="form-label">Apellido</label>
                                                <input type="text" class="form-control" id="inputapellido" name="secondname"
                                                       placeholder="Ingrese su apellido" required>
                                            </div>
                                            <div class="col col-6">
                                                <label class="form-label">Clave de acceso</label>
                                                <div class="input-group mb-3">
                                                    <input type="password" class="form-control" id="inputclave" name="clave"
                                                           placeholder="Ingrese su clave" required>
                                                    <button class="btn btn-outline-secondary" type="button" id="viewPass"><i id="icon" class="fas fa-eye"></i></button>
                                                    <div id="passwordInfo" class="form-text">Contraseña de a lo menos 6 caracteres y maximo 12 caracteres</div>
                                                </div>
                                            </div>
                                            <div class="col col-6">
                                                <label class="form-label">Nuevamente clave de acceso</label>
                                                <div class="input-group mb-3">
                                                    <input type="password" class="form-control" id="inputclave2" name="clave2"
                                                           placeholder="Ingrese nuevamente su clave" required>
                                                    <button class="btn btn-outline-secondary" type="button" id="viewPass2"><i id="icon2" class="fas fa-eye"></i></button>
                                                </div>
                                            </div>
                                            <div class="col col-6">
                                                <label class="form-label">Nombre de usuario</label>
                                                <input type="text" class="form-control" id="inputusername" name="nameuser"
                                                       placeholder="Ingrese su nombre de usuario" required>
                                            </div>
                                            <div class="col col-6">
                                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                                    Continuar
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Custom scripts for all pages-->
    @Scripts.Render("~/bundles/js-add-admin")
</body>
</html>


