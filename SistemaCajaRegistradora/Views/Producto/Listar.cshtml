<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row justify-content-between">
        <div class="col-4">
            <h1 class="h3 mb-4 text-gray-800">@ViewBag.Title</h1>
        </div>
        @if (Model.Count() > 0)
        {
            <div class="col-4">
                <div class="d-grid gap-2 mb-2">
                    <button class="btn btn-primary" onclick="AgregarForms('@Url.Action("AgregarForms","Producto")')" type="button">
                        <i class="fas fa-plus"></i>
                        Agregar producto
                    </button>
                </div>
            </div>
        }
    </div>
    @if (Model.Count() > 0)
    {
        //Acordion
        <div class="accordion accordion-flush" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
                @* Acordion Agregar existencias *@
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#addExistenciasPanel" aria-controls="addExistenciasPanel" aria-expanded="false">
                        Agregar existencias
                    </button>
                </h2>
                <div id="addExistenciasPanel" class="accordion-collapse collapse" aria-labelledby="addExistenciasPanelVista">
                    <div class="accordion-body">
                        <div class="card mb-2">
                            <h5 class="card-header">Agregar existencias</h5>
                            <div class="card-body">
                                <h4>Escanea el producto</h4>
                                <label class="form-label">Codigo de barra</label>
                                <div class="input-group mb-3">
                                    <button id="btnBorrar" class="btn btn-close btn-circle btn-sm" type="button" aria-label="Close" onclick="borrarCodigo()"></button>
                                    <input id="codigoAdd" type="text" class="form-control" placeholder="Ingrese codigo de barra" aria-describedby="btnBorrar">
                                </div>
                                <ul id="listProductos" class="list-group list-group-horizontal overflow-auto">
                                </ul>
                            </div>
                            <div class="card-footer">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button id="btnAplicar" class="btn btn-success me-md-2" onclick="aplicarExistencias()" type="button">Aplicar las existencias</button>
                                    <button class="btn btn-secondary" type="button" onclick="cancelar()">Cancelar operacion</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- table -->
        <div class="row">
            <div class="col-12 table-responsive">
                <table class="table table-sm table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Codigo barra</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Prioridad</th>
                            <th scope="col">Fecha creacion</th>
                            <th scope="col">Acciones</th>
                            <th scope="col">Informacion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <th class="align-middle" scope="row">@p.codigo_barra</th>
                                <td>
                                    <a href="javascript:void(0);" onclick="formsImagenP('@Url.Action("formsImagen", "Producto")',@p.id)">
                                        <img class="rounded mx-auto d-block" src="@p.rutaImg" alt="Imagen del producto"
                                             style="width: 100px; min-width: 100px; min-height: 50px; height: 80px;" />
                                    </a>
                                </td>
                                <td class="align-middle">@p.nombre</td>
                                <td class="align-middle">@p.Categoria.nombre</td>
                                <td class="align-middle">
                                    <span class="float-right">$@p.precio</span>
                                </td>
                                <td class="align-middle">@p.stock</td>
                                <td class="align-middle">@p.Prioridade.prioridad</td>
                                <td class="align-middle">@string.Format("{0:yyyy-MM-dd}", p.fecha_creacion)</td>
                                <td class="align-middle">
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                        <button class="btn btn-warning btn-icon-split" type="button" onclick="formsEditar('@Url.Action("formsEditar", "Producto")',@p.id)">
                                            <span class="icon text-white-50"><i class="fas fa-pen float-left"></i></span>
                                            <span class="text">Editar</span>
                                        </button>
                                        <button class="btn btn-danger btn-icon-split" type="button" onclick="formsEliminar('@Url.Action("formsEliminar", "Producto")', @p.id)">
                                            <span class="icon text-white-50"><i class="fas fa-trash float-left"></i></span>
                                            <span class="text">Eliminar</span>
                                        </button>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    @if (p.stockmin != 0 && p.stockmax != 0)
                                    {
                                        if (p.stock > 0 && p.stock > p.stockmin && p.stock <= p.stockmax)
                                        {
                                            <h4 class="text-center"><span class="badge bg-secondary">Producto dentro del rango stock minimo y maximo</span></h4>
                                        }
                                        else if (p.stock > 0 && p.stock > p.stockmax)
                                        {
                                            int result = (int)p.stock - (int)p.stockmax;
                                            if (p.Prioridade.prioridad.Contains("Baja"))
                                            {
                                                <h4 class="text-center"><span class="badge bg-secondary">Producto sobrepasado en @result existencias</span></h4>
                                            }
                                            else if (p.Prioridade.prioridad.Contains("Medio") || p.Prioridade.prioridad.Contains("Alta"))
                                            {
                                                <h4 class="text-center"><span class="badge bg-secondary">Stock correcto</span></h4>

                                            }
                                        }
                                        else if (p.stock > 0 && p.stock <= p.stockmin)
                                        {
                                            int result = (int)p.stockmin - (int)p.stock;
                                            if (result == 0)
                                            {
                                                if (p.Prioridade.prioridad.Contains("Baja"))
                                                {
                                                    <h4 class="text-center"><span class="badge bg-gradient-primary">Producto en su existencia minima</span></h4>
                                                }
                                                else if (p.Prioridade.prioridad.Contains("Medio"))
                                                {
                                                    <h4 class="text-center"><span class="badge bg-gradient-warning">Producto en su existencia minima</span></h4>
                                                }
                                                else
                                                {
                                                    <h4 class="text-center"><span class="badge bg-gradient-danger">Producto en su existencia minima</span></h4>
                                                }
                                            }
                                            else
                                            {
                                                if (p.Prioridade.prioridad.Contains("Baja"))
                                                {
                                                    <h4 class="text-center"><span class="badge bg-gradient-primary">Producto por debajo de @result existencia del stock minimo</span></h4>
                                                }
                                                else if (p.Prioridade.prioridad.Contains("Medio"))
                                                {
                                                    <h4 class="text-center"><span class="badge bg-gradient-warning">Producto por debajo de @result existencia del stock minimo</span></h4>
                                                }
                                                else
                                                {
                                                    <h4 class="text-center"><span class="badge bg-gradient-danger">Producto por debajo de @result existencia del stock minimo</span></h4>
                                                }
                                            }
                                        }
                                        else if (p.stock == 0)
                                        {
                                            if (p.Prioridade.prioridad.Contains("Baja"))
                                            {
                                                <h4 class="text-center"><span class="badge bg-gradient-primary">Producto sin existencia minima</span></h4>

                                            }
                                            else if (p.Prioridade.prioridad.Contains("Medio"))
                                            {
                                                <h4 class="text-center"><span class="badge bg-gradient-warning">Producto sin existencia minima</span></h4>
                                            }
                                            else
                                            {
                                                <h4 class="text-center"><span class="badge bg-gradient-danger">Producto sin existencia minima</span></h4>
                                            }
                                        }


                                    }
                                    else
                                    {
                                        <h4 class="text-center"><span class="badge bg-gradient-primary">Stock minimo y maximo por defecto</span></h4>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-8">
                        <h5>Aqui no hay productos, intente agregando uno.</h5>
                    </div>
                    <div class="col-4">
                        <button class="btn btn-primary float-right" onclick="AgregarForms('@Url.Action("AgregarForms","Producto")')" role="button">
                            <i class="fas fa-plus"></i>
                            Agregar producto
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<!-- /.container-fluid -->
<!-- Modal core base-->
<div class="modal fade" id="coreModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">

</div>
<script type="text/javascript" title="main">
    var coreModal = document.getElementById('coreModal');
    coreModal.addEventListener('shown.bs.modal', function () {
        var codigo_barra = $('#codigo_barra').val();
        sessionStorage.codigobarrainit = codigo_barra.trim();
    })

    var lista = [];
    $('#btnAplicar').attr('disabled', true);

    $('#codigoAdd').bind('keyup', function (e) {
        var key = e.keyCode || e.which;
        var codigo = $('#codigoAdd').val();
        var producto = {
            "id": 0,
            "codigo_barra": codigo,
            "nombre": 'test',
            "precio": 0,
            "stock": 1,
            "stockmin": 0,
            "stockmax": 0,
            "fecha_creacion": null,
            "prioridadid": 0,
            "categoriaid": 0,
            "rutaImg": 'test'
        };
        if (key === 13) {
            $.post('@Url.Action("addExistencias","Producto")', producto, function (data) {
                let diferencia = 0;
                console.log("1: ", lista);
                if (data.codigobarra != "") {
                    let exist = false;
                    console.log(data.codigobarra);
                    $('#listProductos').empty();
                    if (lista.length > 0) {
                        for (let i = 0; i < lista.length; i++) {
                            if (lista[i].codigobarra == data.codigobarra) {
                                lista[i].newstock++;
                                exist = true;
                            }
                        }
                        if (!exist) {
                            lista.push(data);
                        }
                    } else {
                        lista.push(data);
                    }
                    $('#btnAplicar').attr('disabled', false);
                    for (let i = 0; i < lista.length; i++) {
                        diferencia = lista[i].newstock - lista[i].oldStock;
                        $('#listProductos').append(`<li id="${lista[i].codigobarra}" class="list-group-item m-2">${lista[i].codigobarra}<span class="badge bg-primary rounded-pill">${diferencia}</span></li>`);
                        $('#codigoAdd').val('');
                    }
                    mensaje = 'Codigo de barra ' + producto.codigo_barra + ' añadido';
                    showMenssage('success', mensaje, true);
                } else {
                    mensaje = "No existe ningun producto asociado a este codigo de barra";
                    showMenssage('error', mensaje, true);
                    $('#codigoAdd').val('');
                }
            }, 'json');
        };
    });
    function aplicarExistencias() {
        let error = false;
        for (let i = 0; i < lista.length; i++) {
            var producto = {
                "id": 0,
                "codigo_barra": lista[i].codigobarra,
                "nombre": 'test',
                "precio": 0,
                "stock": lista[i].newstock,
                "stockmin": 0,
                "stockmax": 0,
                "fecha_creacion": null,
                "prioridadid": 0,
                "categoriaid": 0,
                "rutaImg": 'test'
            };
            $.post('@Url.Action("aplicarExistencias","Producto")', producto, function (data) {
                if (data > 0) {
                    error = false;
                } else {
                    error = true;
                }
            });
        }
        if (error) {
            mensaje = "No se actualizo ningun producto";
            showMenssage('error', mensaje, true);
        } else {
            sessionStorage.clear();
            sessionStorage.mensaje = 'Se actualizo las existencia/s de los producto/s';
            location = location.href
        }
    }
    function cancelar() {
        lista = [];
        $('#codigoAdd').val('')
        $('#listProductos').empty();
        var myCollapse = document.getElementById('addExistenciasPanel')
        var bsCollapse = new bootstrap.Collapse(myCollapse, {
            hide: true,
        });
        $('#btnAplicar').attr('disabled', true);
        sessionStorage.clear();
    }
    function borrarCodigo() {
        $('#codigoAdd').val('');
    }
</script>
<script src="~/Scripts/js/scriptsProductos.js"></script>
