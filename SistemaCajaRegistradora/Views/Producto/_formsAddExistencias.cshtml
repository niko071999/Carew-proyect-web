<div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">

    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Agregador de existencias</h5>
        </div>
        <form method="post">
            <div class="modal-body">
                <h4>Escanea el producto</h4>
                <label class="form-label">Codigo de barra</label>
                <input id="codigoAdd" type="number" class="form-control" placeholder="Ingresa codigo de barra" />
                <div>
                    <ul id="list" class="list-group">
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Agregar</button>
            </div>
        </form>
    </div>
</div>
    <script type="text/javascript">
    /*var lista = {};*/
    $('#codigoAdd').bind('keyup', function (e) {
        e.preventDefault();
        var key = e.keyCode || e.which;
        var codigo = document.getElementById("codigoAdd").value;
        if (key === 13) {
            $.post('/Producto/addExistencias/', codigo, function (data) {
                if (data != null) {
                    e.stopPropagation();
                    console.log(data);
                } else {
                    alert("Error: no se cargo nada");
                }
            },'json');
        }
    });
    </script>
