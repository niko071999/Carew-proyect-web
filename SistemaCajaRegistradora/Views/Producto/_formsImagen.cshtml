@model SistemaCajaRegistradora.Models.Producto
<div class="modal-dialog">
    <div class="modal-content">
        <form enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Subir/Cambiar Imagen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 class="fw-bold">Producto: @Model.codigo_barra - @Model.nombre</h5>
                <label for="idArchivo" class="form-label">Seleccione imagen. (Formato JPG o PNG)</label>
                <input class="form-control form-control-sm" onchange="desabilitar()" accept=".jpg,.png,.jpeg" id="idArchivo" type="file">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-dark" onclick="restablecerImagenP('@Url.Action("restablecerImagen","Producto")')">Restablecer imagen</button>
                <button id="btnSubir" type="button" class="btn btn-success" onclick="subirImagenP('@Url.Action("subirImagen","Producto")')" disabled>Subir imagen</button>
            </div>
        </form>
    </div>
</div>
