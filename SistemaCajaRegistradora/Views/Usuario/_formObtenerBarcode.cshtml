@model SistemaCajaRegistradora.Models.Usuario

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Obtener el barcode</h5>
            <button class="btn-close" type="button" data-bs-dismiss="modal">
                <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="modal-body">
            <h5 class="fw-bold">Usuario: <span>@Model.nombre @Model.apellido</span></h5>
            <figure class="figure">
                <img id="barcode" class="figure-img img-fluid rounded">
                <figcaption class="figure-caption">Presione click derecho sobre la imagen y 
                    luego seleccione 'guardar imagen como...'</figcaption>
            </figure>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Cerrar</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    let gencod = `@Ajax.JavaScriptStringEncode(ViewBag.code)`;
    JsBarcode("#barcode", gencod, { format: "CODE128", displayValue: false });
</script>
