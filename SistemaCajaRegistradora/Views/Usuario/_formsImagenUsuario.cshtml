@model SistemaCajaRegistradora.Models.Usuario

<div class="modal-dialog">
    <div class="modal-content">
        <form enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Subir/Cambiar Imagen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 class="fw-bold">Usuario: @Model.nombre @Model.apellido (@Model.nombreUsuario)</h5>
                <label for="idArchivo" class="form-label">Seleccione imagen. (Formato JPG o PNG)</label>
                <input class="form-control form-control-sm" onchange="desabilitar()" accept=".jpg,.png" id="idArchivo" type="file">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button id="btnSubir" type="button" class="btn btn-success" onclick="subirImagenU('@Url.Action("subirImagen","Usuario")')" disabled>Subir imagen</button>
            </div>
        </form>
    </div>
</div>
